{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "types": [],
    "paths": {
      "vitepress-usedata-repro-monorepo": [
        "./packages/vitepress-usedata-repro-monorepo/src/index.ts"
      ],
    }
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "repros/**/*.ts",
    "repros/**/*.vue"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
